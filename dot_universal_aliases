alias path='echo -e ${PATH//:/\\n}'
alias home="cd ~"
alias ports='netstat -tulanp'
alias rm='rm -I'
alias df='df -h'
alias du='du -ch'

alias pscpu='ps wwaxr -o pid,stat,%cpu,time,command | head -10'
alias psmem='ps wwaxm -o pid,stat,vsize,rss,time,command | head -10'
alias topcpu='top -o cpu'
alias topmem='top -o mem'

alias extip='curl ifconfig.me'

